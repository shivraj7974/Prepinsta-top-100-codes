// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

bool isPalindrome(string s){
    int left =0;
    int right = s.length()-1;
    
    while(left<right){
        if(s[left]!=s[right]){
            return false;
            
        }
        left++;
        right--;
    }
    return true;
}

int main() {
    cout<<isPalindrome("madam")<<endl;
    return 0;
}
